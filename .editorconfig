# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 8

# https://google.github.io/styleguide/shell.xml#Indentation
[*.sh]
indent_style = space
indent_size = 2

[*.tf]
# https://github.com/hashicorp/hcl/issues/111
indent_style = space
indent_size = 2
